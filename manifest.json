{
  "manifest_version": 3,
  "name": "Briefly - 网页一键AI总结",
  "version": "0.1.0",
  "description": "跨 Chrome/Firefox 的网页一键AI总结插件，支持 DeepSeek 与 Qwen，支持在弹窗中配置 API Key 与模型并一键总结当前页面内容。",
  "homepage_url": "https://github.com/",
  "icons": {
    "16": "icons/briefly.svg",
    "48": "icons/briefly.svg",
    "128": "icons/briefly.svg"
  },
  "action": {
    "default_title": "Briefly",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://dashscope.aliyuncs.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "briefly@local",
      "strict_min_version": "109.0"
    }
  }
}
